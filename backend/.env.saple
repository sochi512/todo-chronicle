# Google Cloud設定
GOOGLE_CLOUD_PROJECT=your-project-id
GCS_BUCKET_NAME=your-bucket-name

# CORS設定
ALLOWED_ORIGINS=https://your-domain.web.app|http://localhost:4200

# レート制限設定
RATE_LIMIT_WINDOW_SIZE=60
RATE_LIMIT_BLOCK_DURATION=300
RATE_LIMIT_USER_CREATE=10
RATE_LIMIT_TASK_CREATE=60
RATE_LIMIT_TASK_UPDATE=60
RATE_LIMIT_EXP_UPDATE=30
RATE_LIMIT_TASK_DELETE=60
RATE_LIMIT_READ=30

# 署名付きURL設定
SIGNED_URL_EXPIRATION=3600

# リトライ設定
IMAGE_GEN_MAX_RETRIES=3
STORY_GEN_MAX_RETRIES=3

# Vertex AI設定
VERTEX_AI_MODEL_NAME=gemini-2.0-flash-001
VERTEX_AI_ENDPOINT=https://asia-northeast1-aiplatform.googleapis.com
VERTEX_AI_PROJECT_ID=your-project-id
VERTEX_AI_LOCATION=us-central1

# 認証情報ファイルパス
GOOGLE_APPLICATION_CREDENTIALS=/app/service-account.json

# Replicate API設定
REPLICATE_API_TOKEN=your-replicate-api-token

# 環境設定
ENVIRONMENT=development  # development, production